<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    style="@style/match_wrap"
    android:clickable="true">

    <View
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/favorite"
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-4.5dp"
        android:adjustViewBounds="true"
        android:elevation="4dp"
        android:padding="0dp"
        android:scaleType="fitStart"
        android:src="@mipmap/bookmark" />


    <RelativeLayout
        style="@style/match_wrap"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">


        <FrameLayout
            android:id="@+id/icon_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/icon_background"
                android:padding="4dp"
                android:src="@mipmap/envelop" />

            <ImageView
                android:id="@+id/selected"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/selected_item_icon" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/right_holder"
            android:layout_toRightOf="@+id/icon_holder"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp"
                android:text="Teste"
                android:textColor="@color/primary_text"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp"
                android:lines="2"
                android:maxLength="50"
                android:ellipsize="end"
                android:textColor="@color/secondary_text"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="34/34/34"
                android:textColor="@color/secondary_text"
                android:textSize="10dp" />
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
