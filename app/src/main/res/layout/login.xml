<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_match"
    android:background="@color/primary_dark"
    android:orientation="vertical">

    <ScrollView
        style="@style/match_wrap"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:paddingTop="50dp"
            android:orientation="horizontal">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <LinearLayout
                android:id="@+id/email_login_form"
                style="@style/match_wrap"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="vertical">

                <include
                    layout="@layout/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_label"
                    style="@style/text_input"
                    android:layout_marginTop="20dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/name"
                        style="@style/edit"
                        android:hint="@string/name"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_label"
                    style="@style/text_input">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email"
                        style="@style/edit"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <include layout="@layout/password_item" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_retype_label"
                    style="@style/pass_input"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/password_retype"
                        style="@style/edit"
                        android:hint="@string/retype_password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/submit"
                    style="@style/button"
                    android:text="@string/sign_in" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/link"
                        style="@style/link"
                        android:text="@string/new_account_link"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/forgot"
                        style="@style/link"
                        android:text="@string/forgot_password"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/social_buttons"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/google"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        style="@style/google_button"
                        android:drawableLeft="@mipmap/google"
                        android:text="@string/google" />


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/facebook"
                        style="@style/facebook_button"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:drawableLeft="@mipmap/facebook"
                        android:text="@string/facebook" />

                </LinearLayout>
            </LinearLayout>


            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
