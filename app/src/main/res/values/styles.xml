<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeParent">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>


    <style name="AppThemeParent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <!--There are some 21 styles here-->
    </style>

    <style name="AppTheme.Pref" parent="AppTheme">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="green_background" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/primary_dark_alpha</item>
        <item name="colorControlHighlight">@color/primary_dark_alpha_stronger</item>
    </style>


    <style name="facebook_background" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/facebook</item>
        <item name="colorControlHighlight">@color/facebook_stronger</item>
    </style>


    <style name="google_background" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/google</item>
        <item name="colorControlHighlight">@color/google_stronger</item>
    </style>


    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label" parent="match_wrap">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="edit" parent="match_wrap">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:theme">@style/green_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="facebook_button" parent="button">
        <item name="android:theme">@style/facebook_background</item>
    </style>

    <style name="google_button" parent="button">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:theme">@style/google_background</item>
    </style>

    <style name="text_input" parent="match_wrap">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>


    <style name="link" parent="match_wrap">
        <item name="android:textColor">@color/link_selector</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dip</item>
    </style>


</resources>
